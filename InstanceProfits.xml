<Ui>
	<Frame name="InstanceProfits_TableDisplay" parent="UIParent" movable="true">
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Size>
			<AbsDimension x="500" y="700" />
		</Size>
		<Backdrop 	bgFile="Interface\Tooltips\UI-Tooltip-Background"
					edgeFile="Interface\Tooltips\UI-Tooltip-Border"
					tile="true">
			<EdgeSize>
				<AbsValue val="16" />
			</EdgeSize>
			<TileSize>
				<AbsValue val="16" />
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="4" right="3" top="4" bottom="3" />
			</BackgroundInsets>
			<Color r="0.2" g="0.2" b="0.2" a="0.7" />
		</Backdrop>
		<Frames>
			<Frame name="$parent_TitleBar" enableMouse="true">
				<Anchors>
					<Anchor point="TOPLEFT" />
				</Anchors>
				<Size>
					<AbsDimension x="500" y="30" />
				</Size>
				<Backdrop 	bgFile="Interface\Tooltips\UI-Tooltip-Background"
							tile="true">
					<TileSize>
						<AbsValue val="16" />
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="4" right="3" top="4" bottom="3" />
					</BackgroundInsets>
					<Color r="0.2" g="0.2" b="1" a="1" />
				</Backdrop>
				<Frames>
					<Button name="$parent_ButtonClose" inherits="OptionsButtonTemplate" text="X">
						<Anchors>
							<Anchor point="BOTTOMRIGHT">
								<Offset x="-10" y="7"/>
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="16" y="16" />
						</Size>
						<Scripts>
							<OnClick> self:GetParent():GetParent():Hide(); </OnClick>
						</Scripts>
					</Button>
				</Frames>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parent_TitleString"
									inherits="SystemFont_Med3"
									text="InstanceProfit Tracking"
									justifyV="TOP"
									justifyH="RIGHT">
							<Size>
								<AbsDimension x="0" y="15" />
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset>
										<AbsDimension x="20" y="-10" />
									</Offset>
								</Anchor>
							</Anchors>
							<Color r="1" g="0.2" b="0.2" a="1" />
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnMouseDown>
						self:GetParent():StartMoving();
					</OnMouseDown>
					<OnMouseUp>
						self:GetParent():StopMovingOrSizing();
					</OnMouseUp>
				</Scripts>
			</Frame>

			<Button name="$parent_ButtonToggleData" inherits="OptionsButtonTemplate" text="Show Account Data">
				<Anchors>
					<Anchor point="TOP">
						<Offset x="15" y="-32"/>
					</Anchor>
			    </Anchors>
				<Size>
					<AbsDimension x="150" y="21" />
				</Size>
			    <Scripts>
					<OnClick> IP_ToggleDisplayGlobal(); </OnClick>
			    </Scripts>
			</Button>

			<Button name="$parent_ButtonClose" inherits="OptionsButtonTemplate" text="Close">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-12" y="16"/>
					</Anchor>
			    </Anchors>
			    <Scripts>
					<OnClick> self:GetParent():Hide(); </OnClick>
			    </Scripts>
			</Button>
			<!-- Deleting all data won't work with the way that data is saved on a per character basis
			<Button name="$parent_ButtonResetAll" inherits="OptionsButtonTemplate" text="Reset All Data">
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="12" y="16"/>
					</Anchor>
			    </Anchors>
				<Size>
					<AbsDimension x="110" y="21" />
				</Size>
			    <Scripts>
					<OnClick> IP_ClearAllData(); </OnClick>
			    </Scripts>
			</Button>
			-->
			<Button name="$parent_ButtonResetChar" inherits="OptionsButtonTemplate" text="Reset Character Data">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="15" y="16"/>
					</Anchor>
			    </Anchors>
				<Size>
					<AbsDimension x="150" y="21" />
				</Size>
			    <Scripts>
					<OnClick> IP_ClearCharacterData(); </OnClick>
			    </Scripts>
			</Button>
		</Frames>

	</Frame>
</Ui>
